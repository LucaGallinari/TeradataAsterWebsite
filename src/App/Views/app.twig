{% extends "base.twig" %}

{% block head %}
    <title>App Panel</title>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s12 m9 l10">
            <h3 class="center-align page-title">App Panel</h3>
            <ul>
                <li>User ID: {{ user.getId }}</li>
                <li>
                    <a href="{{ path('app_aster_test') }}" target="_blank">
                        Test Aster Cluser connection
                    </a>
                </li>
            </ul>
            <div>
                <h4>Recommended Events</h4>
                <ul>
                    {%  for e in rec_events %}
                        <li>{{ rec_events.getEventId }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div>
                <h4>Events</h4>
                <ul>
                    {%  for e in events %}
                    <li>{{ e.getEventId }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div>
                <h4>Interested Events</h4>
                <ul>
                    {%  for e in int_events %}
                        <li>{{ e.getEventId }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}